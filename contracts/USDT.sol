        require(invitee[msg.sender] == address(0), "Already invited");
        require(_inviter != msg.sender, "You can't invite yourself");
        bool alreadyInvited = false;
        for(uint i = 0; i < inviters[_inviter].length; i++){
            if(inviters[_inviter][i] == msg.sender){
                alreadyInvited = true;
            }
        }
        require(!alreadyInvited, "Already binding");
        inviters[_inviter].push(msg.sender);
        invitee[msg.sender] = _inviter;
        emit Investment(msg.sender, _inviter);
    }


